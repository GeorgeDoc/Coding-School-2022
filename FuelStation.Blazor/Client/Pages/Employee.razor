    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Position</th>
                <th>Salary</th>
                <th>Hire Date</th>
                <th>Finish Date</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in employeeList)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Surname</td>
                    <td>Position select</td>
                    <td>@employee.SallaryPerMonth</td>
                    <td>@employee.HireDateStart</td>
                    @if(employee.HireDateEnd != null) { <td>@employee.HireDateEnd</td> }
                    <td>
                        <button class="btn btn-primary" @onclick="() => EditEmployee(employee)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeleteEmployee(employee)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

